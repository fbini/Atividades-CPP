#include <iostream>

double calculandoImc(double peso, double altura){
    return peso / (altura * altura);
}

int main() {
    double peso;
    double altura;
    double imc;

    std::cout << "Calculadora de IMC" << std::endl;
    std::cout << "Digite seu peso" << std::endl;
    std::cin >> peso;

    std::cout << "Digite sua altura" << std::endl;
    std::cin >> altura;

    imc = calculandoImc(peso, altura);

    std::cout << "Peso: " 
              << peso 
              << " kg \n" 
              << "Altura: " 
              << altura 
              << " m\n" 
              << "Seu IMC é: " 
              << imc 
              << std::endl;
    
    if (imc < 18.5) {
        std::cout << "Você está abaixo do peso";

    } else if (imc >= 18.5 && imc <= 24.9) {
        std::cout << "Seu peso está normal";

    } else if (imc >= 25.0 && imc <= 29.9) {
        std::cout << "Você está com sobrepeso";

    } else if (imc >= 30.0 && imc <= 34.9) {
        std::cout << "Você está com Obesidade";

    } else {
        std::cout << "Não foi possível determinar";
    }

    return 0;
}